{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves a json representation of the article with the given id",
    "exampleResponse": {
      "article": {
        "article_id": 7,
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article..",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0,
        "article_img_url": "https://example.com/photos/1323/example.jpeg"
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "update an article",
    "requestBodyFormat": {
      "inc_votes": 1
    },
    "exampleResponse": {
      "article": {
        "article_id": 7,
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article..",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 1,
        "article_img_url": "https://example.com/photos/1323/example.jpeg"
      }
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles, by default sorted by date in descending order",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "article_id": 7,
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_img_url": "https://example.com/photos/1323/example.jpeg",
          "comment_count": 13
        }
      ]
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of all comments on an article",
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 3,
          "body": "hello from texas",
          "author": "jimbochamp",
          "article_id": 5,
          "created_at": "2020-02-02T13:42:22.221Z",
          "votes": 400
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "adds a comment to an article",
    "requestBodyFormat": {
      "username": "example_username",
      "body": "example_body"
    },
    "exampleResponse": {
      "comment": {
        "comment_id": 47,
        "body": "example_body",
        "author": "example_username",
        "article_id": 4,
        "created_at": "2021-03-02T13:00:00.200Z",
        "votes": 0
      }
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes a comment"
  }
}
